****
* BORRA UN REGISTRE D'UNA TAULA EN MEMORIA
*
* ENTRADA
*   VITID = IDENTIFICADOR DE REGISTRE
****
$OPTIONS -STATIC.DIM
ITID=CHANGE(CHANGE(VITID,KCHAR1,KCHAR1MEM),@AM,KAMMEM)
* CALCULO DEL GRUPO (HASH)
GRUPMEM = CHECKSUM(ITID<1>) + 1
* BUSCAR SI EXISTE
LOCATE(ITID<1>, MATCLAVESMEM(GRUPMEM); POSATRMEM) THEN
  * ENCONTRADO
  MATCLAVESMEM(GRUPMEM)=DELETE(MATCLAVESMEM(GRUPMEM),POSATRMEM)
  MATVALORESMEM(GRUPMEM)=DELETE(MATVALORESMEM(GRUPMEM),POSATRMEM)
END
